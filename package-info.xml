	<install for="2.0 - 2.0.99">
		<readme type="file" parsebbc="true">readme.txt</readme>
		<code>add_remove_hooks.php</code>
		<database>db_install.php</database>
		<modification>install_20x.xml</modification>
		<require-file name="Class-exifReader.php" destination="$sourcedir" />
		<require-file name="Subs-AutoRotation.php" destination="$sourcedir" />
		<require-file name="Subs-ResizeExistingImages.php" destination="$sourcedir" />
		<require-file name="ResizeExistingImages.template.php" destination="$boarddir/Themes/default" />
