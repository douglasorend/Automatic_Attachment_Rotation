<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>Dougiefresh:AutoRotation</id>
	<name>Automatic Attachment Rotation (and Resize)</name>
	<type>modification</type>
	<version>4.1</version>

	<install for="2.0 - 2.0.99">
		<readme parsebbc="true">readme.txt</readme>
		<code>add_remove_hooks.php</code>
		<database>db_install.php</database>
		<modification>install_20x.xml</modification>
		<require-file name="Class-exifReader.php" destination="$sourcedir" />
		<require-file name="Subs-AutoRotation.php" destination="$sourcedir" />
		<require-file name="AutoRotation.dutch-utf8.php" destination="$boarddir/Themes/default/languages" />
		<require-file name="AutoRotation.english.php" destination="$boarddir/Themes/default/languages" />
		<require-file name="AutoRotation.spanish_latin.php" destination="$boarddir/Themes/default/languages" />
		<require-file name="AutoRotation.spanish_latin-utf8.php" destination="$boarddir/Themes/default/languages" />
	</install>
	<uninstall for="2.0 - 2.0.99">
		<code>add_remove_hooks.php</code>
		<modification reverse="true">install_20x.xml</modification>
		<remove-file name="$sourcedir/Class-exifReader.php" />		
		<remove-file name="$sourcedir/Subs-AutoRotation.php" />		
		<remove-file name="$boarddir/Themes/default/languages/AutoRotation.dutch-utf8.php" />
		<remove-file name="$boarddir/Themes/default/languages/AutoRotation.english.php" />
		<remove-file name="$boarddir/Themes/default/languages/AutoRotation.spanish_latin.php" />
		<remove-file name="$boarddir/Themes/default/languages/AutoRotation.spanish_latin-utf8.php" />
	</uninstall>

	<install for="2.1 Beta 2">
		<readme parsebbc="true">readme.txt</readme>
		<code>add_remove_hooks.php</code>
		<database>db_install.php</database>
		<modification>install_21x.xml</modification>
		<require-file name="Class-exifReader.php" destination="$sourcedir" />
		<require-file name="Subs-AutoRotation.php" destination="$sourcedir" />
		<require-file name="AutoRotation.dutch-utf8.php" destination="$boarddir/Themes/default/languages" />
		<require-file name="AutoRotation.english.php" destination="$boarddir/Themes/default/languages" />
		<require-file name="AutoRotation.spanish_latin.php" destination="$boarddir/Themes/default/languages" />
		<require-file name="AutoRotation.spanish_latin-utf8.php" destination="$boarddir/Themes/default/languages" />
	</install>
	<uninstall for="2.1 Beta 2">
		<code>add_remove_hooks.php</code>
		<modification reverse="true">install_21x.xml</modification>
		<remove-file name="$sourcedir/Class-exifReader.php" />		
		<remove-file name="$sourcedir/Subs-AutoRotation.php" />		
		<remove-file name="$boarddir/Themes/default/languages/AutoRotation.dutch-utf8.php" />
		<remove-file name="$boarddir/Themes/default/languages/AutoRotation.english.php" />
		<remove-file name="$boarddir/Themes/default/languages/AutoRotation.spanish_latin.php" />
		<remove-file name="$boarddir/Themes/default/languages/AutoRotation.spanish_latin-utf8.php" />
	</uninstall>
</package-info>
